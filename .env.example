CODEATLAS_LLM_PROVIDER=openai
CODEATLAS_LLM_MODEL=gpt-4o-mini
CODEATLAS_LLM_TEMPERATURE=0.0

# Put real keys in .env (do not commit)
OPENAI_API_KEY=
GROQ_API_KEY=

# Frontend origins allowed to call the backend (comma-separated)
CODEATLAS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Optional storage dirs (Render: use /var/data)
CODEATLAS_INDEX_DIR=.codeatlas/indexes
CODEATLAS_STATE_DIR=.codeatlas/state
